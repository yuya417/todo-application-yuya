.container
  %h2.title-text
    Edit Card
  = form_with(model: @task, url: board_task_path(@task), method: 'put', local: true) do |f|
    %div.name-text
      = f.label :eyecatch, 'Eyecatch'
    %div
      = f.file_field :eyecatch, class: 'eyecatch-field'
    %div.name-text
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div.name-text
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    %div.name-text
      = f.label :limit ,'Limit'
    %div
      = f.date_field :limit, class: 'text'
    = f.submit 'Submit'