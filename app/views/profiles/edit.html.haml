.container
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div.name-text
      = f.label :nickname, 'User Name'
    %div
      = f.text_field :nickname, class: 'text'
    %div.name-text
      = f.label :introduction, 'Introduction'
    %div
      = f.text_area :introduction, class: 'text'
    = f.submit 'Submit',class: 'btn-primary'